{
  "name": "cfx-natives-vscode",
  "displayName": "cfx-natives-vscode",
  "author": "SUP2AK",
  "description": "CFX Natives for VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:csharp"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "CFX Natives",
      "properties": {
        "cfx-natives.insertParentheses": {
          "type": "boolean",
          "default": false,
          "description": "Automatically insert parentheses with arguments when you enter a native function name"
        }
      }
    },
    "commands": [
      {
        "command": "cfx-natives-vscode.listNatives",
        "title": "CFX: List Natives",
        "description": "Open page with all natives",
        "category": "CFX Natives"
      },
      {
        "command": "cfx-natives.toggleParentheses",
        "title": "Toggle Auto Parentheses",
        "description": "Toggle the automatic insertion of parentheses with arguments when you enter a native function name",
        "category": "CFX Natives"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
